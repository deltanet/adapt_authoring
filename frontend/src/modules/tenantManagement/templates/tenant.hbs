<div class="inner">
  <div class="col-row">

    <div class="col-15">
      <div class="tb-col-inner">
        <span class="read">{{name}}</span>
      </div>
    </div>

    <div class="col-15">
      <div class="tb-col-inner">
        <span class="read">{{displayName}}</span>
        <a class="edit read edit-mode"><i class="fa fa-pencil-square-o"></i></a>
        <div class="input-container write">
          <input class="input" type="text" data-modelKey="displayName" autocomplete="off">
          <a class="save"><i class="fa fa-check-square-o"></i></a>
          <a class="cancel"><i class="fa fa-times"></i></a>
        </div>
      </div>
    </div>

    <div class="col-15">
      <div class="tb-col-inner">
        <span class="read">{{renderBooleanText translationEnabled}}</span>
        <a class="edit read edit-mode"><i class="fa fa-pencil-square-o"></i></a>
        <div class="input-container write" style="white-space: nowrap;">
          <select class="input" data-modelKey="translationEnabled">
            {{renderBooleanOptions translationEnabled}}
          </select>
          <a class="save"><i class="fa fa-check-square-o"></i></a>
          <a class="cancel"><i class="fa fa-times"></i></a>
        </div>
      </div>
    </div>

    <div class="col-15 col-centered">
      <div class="tb-col-inner">{{momentFormat createdAt 'Do MMM YYYY'}}</div>
    </div>

    <div class="col-15 col-centered">
      <div class="tb-col-inner">{{momentFormat updatedAt 'Do MMM YYYY'}}</div>
    </div>

    <div class="col-10">
      <div class="tb-col-inner">
        <div class="buttons edit-mode">
          {{#if isMaster}}
           <div>{{t 'app.mastertenantcannotdisable'}}</div>
          {{else}}
            {{#if _isDeleted}}
              <button id="enable_{{_id}}" class="btn action-primary restore enableTenant">
                  {{t 'app.enableTenant'}}
              </button>
              <button id="delete_{{_id}}" class="btn action-primary alert deleteTenant">
                  {{t 'app.deletetenant'}}
              </button>
              <button id="disable_{{_id}}" class="btn action-primary warning disableTenant display-none">
                  {{t 'app.disableTenant'}}
              </button>
            {{else}}
              <button id="enable_{{_id}}" class="btn action-primary restore enableTenant display-none">
                {{t 'app.enableTenant'}}
              </button>
              <button id="disable_{{_id}}" class="btn action-primary warning disableTenant">
                {{t 'app.disableTenant'}}
              </button>
            {{/if}}
          {{/if}}
        </div>
      </div>
    </div>

  </div>
</div>
